<div class="row text-center">
  <div class="col">
    <h5>
      <i class="fas fa-book"></i> {{'transcript_help'|trans}}
    </h5>
    {% if project.projectHelpLink %}
      <a class="btn btn-outline-secondary" href="{{ project.projectHelpLink }}" target="_blank">
        {{'transcript_help_doc'|trans}}
      </a>
    {% else %}
      <span class="text-muted">{{'transcript_help_doc_undefined'|trans}}</span>
    {% endif %}
  </div>
  <div class="col">
    <h5>
      <i class="fas fa-images"></i> {{"illustration"|trans}}
    </h5>
    {{ include("transcribe/modal-examples.html.twig") }}
  </div>
  <div class="col">
    <h5>
      <i class="fas fa-magic"></i> {{"tutorial"|trans}}
    </h5>
    <a id="start-tutorial" class="btn btn-outline-secondary" href="#" data-dismiss="modal">
      {{'tutorial_enable'|trans}}
    </a>
  </div>
</div>
