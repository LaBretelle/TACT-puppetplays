<div class="modal fade report-modal" id="report-modal" tabindex="-1" role="dialog" aria-labelledby="mediaModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{'report_transcription'|trans}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="report"> {{"report_transcription_text"|trans}}</label>
          <select id="report" class="form-control">
            <option selected="selected" value="technical">{{"technical"|trans}}</option>
            <option value="insults">{{"insults"|trans}}</option>
            <option value="other">{{"other"|trans}}</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button data-id="{{media.id}}" type="button" class="btn btn-primary send-report">{{'send'|trans}}</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{'close'|trans}}</button>
      </div>
    </div>
  </div>
</div>
