{% extends "base.html.twig" %}

{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" href="{{ asset('build/css/account.css') }}">
{% endblock %}

{% block body %}
  {{ form_start(form) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.firstname) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.publicMail) }}
    {{ form_row(form.image) }}
    {% if app.user.image %}
    <div class="row">
      <div class="col-lg-12 col-md-12 col-xs-12">
        <img class="user_profile_image_md" src="{{asset('user_images/' ~ app.user.image)}}" alt="{{app.user.lastname}} {{app.user.firstname}}">
        <input type="hidden" name="previous_image" value="{{app.user.image}}" />
      </div>
    </div>
    {% endif %}
    {{ form_row(form.description) }}

    <button class="btn btn-primary" type="submit">{{ 'submit' | trans({}, 'messages')}}</button>
    <a href="#" class="btn btn-default">{{ 'cancel' | trans({}, 'messages')}}</a>
  {{ form_end(form) }}
{% endblock %}
