{% extends "base.html.twig" %}

{% block body %}
  <div class="row">
    <div class="col-lg-12 col-sm-12 home-message-container">
      <h4>{{'home_title' | trans({}, 'messages')}}</h4>
      <hr/>
      <p>
        {{home_text | raw}}
      </p>
    </div>
  </div>
  <hr/>
  <div class="flex-tiles-container">
    {% for project in projects %}
      <div class="tile">
          <div class="tile-title">
            {{ project.name }}
          </div>
          <div class="tile-description">
            <a href="{{ path("project_display", {'id': project.id} )}}">Voir</a>
            <p>{{ project.shortDescription }}</p>
          </div>
      </div>
    {% endfor %}
    {% if is_granted('ROLE_ADMIN') %}
    <div class="tile">
      <a href="{{ path("project_create") }}">Ajouter</a>
    </div>
    {% endif %}

  </div>


  <div id="mymodal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script src="{{ asset('build/js/home.js') }}"></script>
  <script> console.log('toto is here ? ', toto); </script>
{% endblock %}
