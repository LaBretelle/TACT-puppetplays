{% extends "base.html.twig" %}

{% block body %}
  <div id="main-container">
    <h1 class="page-title">{{'actu'|trans}}</h1>
    <div class="row justify-content-center">
      <div class="col-8">
        <div class="card mb-2">
            {% for post in rss.channel.item %}
            <div class="card-body">
              <h3>{{post.title}}</h3>
              <h4 class="text-muted">{{post.pubDate|date("d/m/Y")}}</h4>
              <a target="_blank" href="{{post.link}}">voir l'actualit√©</a>
            </div>
            {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
