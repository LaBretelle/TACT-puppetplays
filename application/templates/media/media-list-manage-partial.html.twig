{% import "media/macros.html.twig" as macros %}


<div class="row">
  {# project tree col #}
  <div class="col-3 project-tree-col">
    <nav class="navbar navbar-expand-lg navbar-light bg-light" aria-label="action-bar">
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item float-right">
              <div class="btn-group">
                <button class="btn btn-link" type="button" role="button"><i class="fas fas fa-plus"></i></button>
                <button class="btn btn-link" disabled type="button" role="button"><i class="fas fa-pencil-alt"></i></button>
                <button class="btn btn-link" disabled type="button" role="button"><i class="fas fa-trash"></i></button>
              </div>
            </li>
          </ul>
        </div>
    </nav>
    <ul class="project-tree">
      {% for dir in project.dirs if dir.parent is null %}
        {{macros.projectTree(dir, project, parent)}}
      {% endfor %}
    </ul>
  </div>
  {# selected tree media col #}
  <div class="col-9">
    <nav class="navbar navbar-expand-lg navbar-light bg-light" aria-label="action-bar">
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item float-right">
              <div class="btn-group images-actions">
                <button class="btn btn-link move-media" disabled type="button" role="button"><i class="fas fas fa-arrows-alt-v"></i></button>
                <button class="btn btn-link delete-media" disabled type="button" role="button"><i class="fas fa-trash"></i></button>
              </div>
            </li>
          </ul>
        </div>
    </nav>
    <div class="row media-list-row">
        {% if project.medias | length == 0 %}
          <div class="col-12 text-center">
            <h5>{{'project_media_no_media' | trans}}</h5>
          </div>
        {% else %}
          {% set nbMediasForCurrentDir = -1 %}
          {% for media in project.medias if media.parent == parent %}
            <div id="img-col-{{media.id}}" class="col-2">
              <div class="card mb-2 box-shadow">
                <img data-toggle="tooltip" title="{{media.name}}" class="card-img-top project-image" src="{{ macros.mediaURL(media) }}" alt=""></img>

                <div class="card-footer text-center">
                  <div class="form-check">
                    <input type="checkbox" name="image-select" data-id="{{media.id}}" class="form-check-input image-select">
                    <label class="form-check-label"></label>
                  </div>
                </div>
              </div>
            </div>
            {% set nbMediasForCurrentDir = loop.index %}
          {% endfor %}
          {% if nbMediasForCurrentDir == -1  %}
          <div class="col-12 text-center">
            <h5>{{'project_media_no_media_in_current_dir' | trans}}</h5>
          </div>
          {% endif %}
        {% endif %}
    </div>
  </div>
</div>

{# delete project media confirm modal #}
<div class="modal fade delete-project-media-confirm-modal" id="delete-project-media-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{'confirm_title'| trans}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h6>{{'confirm_delete_project_media' | trans}}</h6>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-action="cancel" data-dismiss="modal">{{'cancel' | trans}}</button>
        <button type="button" data-action="confirm" data-dismiss="modal" class="btn btn-danger delete-media-confirm-button">{{'confirm' | trans}}</button>
      </div>
    </div>
  </div>
</div>

{# move project media confirm modal #}
<div class="modal fade move-project-media-modal" id="move-project-media-modal" tabindex="-1" role="dialog" aria-labelledby="moveMediaModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="moveMediaModalLabel">{{'media_change_directory_title'| trans}}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <select id="select-folder" name="folder" class="form-control">
              <option value="-1">{{'root_directory_option'| trans}}</option>
              {% for dir in project.dirs if dir != parent %}
                <option value="{{dir.id}}">{{dir.name}}</option>
              {% endfor %}
            </select>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-action="cancel" data-dismiss="modal">{{'cancel' | trans}}</button>
          <button type="button" data-action="confirm" data-dismiss="modal" class="btn btn-danger move-media-confirm-button">{{'confirm' | trans}}</button>
        </div>
    </div>
  </div>
</div>

{# show media full size modal #}
<div class="modal fade project-media-modal" id="project-media-modal" tabindex="-1" role="dialog" aria-labelledby="mediaModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body"></div>
    </div>
  </div>
</div>
