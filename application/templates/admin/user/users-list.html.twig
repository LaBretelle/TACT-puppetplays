{% extends "base.html.twig" %}

{% block stylesheets %}
  {{parent()}}
  <link rel="stylesheet" href="{{ asset('build/css/user.css') }}">
{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-12">
      <h4>{{'administrate_users_title' | trans}}</h4>
    </div>
  </div>
  <hr/>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="search-icon-addon">
        <i class="fa fa-search"></i>
      </span>
    </div>
    <input type="text" class="form-control search-input" placeholder="{{'filter_users_by' | trans}}" aria-label="Search user" aria-describedby="search-icon-addon"></input>
  </div>
  <hr/>
  <table class="table table-striped user-table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">{{'userfullname' | trans}}</th>
        <th scope="col">{{'username' | trans}}</th>
        <th scope="col">{{'email' | trans}}</th>
        <th scope="col">{{'user_is_active' | trans}}</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <tr class="ajax-row">
        <td colspan="6">
          <i class="fas fa-spinner fa-pulse fa-3x fa-fw"></i>
          <span class="sr-only">Loading...</span>
        </td>
      </tr>
      {# partial with data will be append dynamicaly #}
    </tbody>
  </table>

  <div class="modal fade delete-user-confirm-modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New message</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h4>sure?</h4>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-action="cancel" data-dismiss="modal">Close</button>
          <button type="button" data-action="valid" data-dismiss="modal" class="btn btn-primary delete-user-confirm-button">Yep I'm sure!</button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('build/js/user-list.js') }}"></script>
{% endblock %}
