{% for user in users %}
  <tr>
    <th data-placement="bottom"  scope="row">{{user.id}}</th>
    <td>{{user.fullname}}</td>
    <td>{{user.username}}</td>
    <td>{{user.email}}</td>
    <td>
      <input type="checkbox" data-id="{{user.id}}" data-toggle="tooltip" title="{{'user_activate_action' | trans}}" class="user-active-chk" name="user_active" {% if user.active is same as(true) %}checked{% endif %}> </input>
    </td>
    <td>
      <div class="btn-group">
        <a href="{{path('user_edit', {'id': user.id})}}" data-toggle="tooltip" title="{{'user_edit' | trans}}" class="btn btn-link"><i class="fas fa-user-edit"></i></a>
        <button data-id="{{user.id}}" data-toggle="tooltip" title="{{'user_delete' | trans}}" class="btn btn-link user-delete"><i class="fas fa-trash"></i></button>
      </div>
    </td>
  </tr>
{% endfor %}
