{% extends "base.html.twig" %}
{% import "project/macros.html.twig" as macros %}

{% block body %}
  {% include 'header.html.twig' with {'title' : "edit_create_server" } %}


  <div id="main-container">
    <div class="row">
      <div class="col">
        {{form(form)}}

        {% if server.id %}
          {% if server.medias|length == 0 %}
          <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
            <i class="fas fa-trash"></i> Supprimer le serveur
          </button>

          <div id="deleteModal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Suppression serveur IIIF</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <p>Êtes-vous sûr de vouloir supprimer le server {{server.name}} ? </p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <a href="{{path("iiif_delete", {id:server.id})}}" class="btn btn-danger">Oui, supprimer</a>
                </div>
              </div>
            </div>
          </div>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </div>

{% endblock %}
