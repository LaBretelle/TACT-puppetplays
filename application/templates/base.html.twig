<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>
      {% block title %}PATACS{% endblock %}
    </title>
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    {% endblock %}
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="{{ path('home') }}">PATACS</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="{{ path('home') }}">{{ 'home' | trans({}, 'messages')}}
              <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Features</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Pricing</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Dropdown link
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" href="#">Something else here</a>
            </div>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item float-right">
            {% if app.user %}
            <li >
              <label class="nav-link" data-placement="bottom" data-toggle="tooltip" title="{{ 'connected' | trans({'%username%' : app.user.username}, 'messages')}}">
                <i class="fa fa-user fa-fw"></i>{{app.user.username}}</label>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('logout') }}" data-placement="bottom" data-toggle="tooltip" title="{{ 'logout' | trans({}, 'messages')}}">
                <i class="fa fa-sign-out fa-fw"></i>
              </a>
            </li>
          {% else %}
            <li class="nav-item">
              <a class="nav-link" href="{{ path('login') }}" data-placement="bottom" data-toggle="tooltip" title="{{ 'login' | trans({}, 'messages')}}">
                <i class="fa fa-sign-in fa-fw"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('register') }}" data-placement="bottom" data-toggle="tooltip" title="{{ 'register' | trans({}, 'messages')}}">
                <i class="fa fa-address-card fa-fw"></i>
              </a>
            </li>
          {% endif %}
        </li>
      </ul>
    </div>
  </nav>
  <div class="container">
    {% block body %}{% endblock %}
  </div>
  <nav class="navbar fixed-bottom navbar-light bg-light">
    <a class="navbar-brand" href="#">Fixed bottom footer</a>
  </nav>
  {% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
  {% endblock %}
</body>
</html>
