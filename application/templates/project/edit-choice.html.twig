{% extends "base.html.twig" %}

{% import _self as formMacros %}

{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" href="{{ asset('build/css/create-project.css') }}">
{% endblock %}

{% block body %}

{% include 'project/navigation.html.twig' with {'current': 'project_edit'} %}

<div id="main-container">
  <div class="row">
    <div class="mb-4 col-12 col-md-6 col-lg-4 col-xl-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ "edit_basic" | trans }}</h5>
          <p class="card-text">{{ "edit_basic_help" | trans }}</p>
          <a class="card-link" href="{{ path("project_edit-basic", {'id': project.id} )}}">{{ "edit" | trans }}</a>
        </div>
      </div>
    </div>

    <div class="mb-4 col-12 col-md-6 col-lg-4 col-xl-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ "edit_advanced" | trans }}</h5>
          <p class="card-text">{{ "edit_advanced_help" | trans }}</p>
          <a class="card-link" href="{{ path("project_edit-advanced", {'id': project.id} )}}">{{ "edit" | trans }}</a>
        </div>
      </div>
    </div>

    <div class="mb-4 col-12 col-md-6 col-lg-4 col-xl-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ "edit_iiif" | trans }}</h5>
          <p class="card-text">{{ "edit_iiif_help" | trans }}</p>
          <a class="card-link" href="{{ path("project_edit-iiif", {'id': project.id} )}}">{{ "edit" | trans }}</a>
        </div>
      </div>
    </div>

    <div class="mb-4 col-12 col-md-6 col-lg-4 col-xl-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ "edit_metadatas" | trans }}</h5>
          <p class="card-text">{{ "edit_metadatas_help" | trans }}</p>
          <a class="card-link" href="{{ path("project_metadatas", {'id': project.id} )}}">{{ "edit" | trans }}</a>
        </div>
      </div>
    </div>

    <div class="mb-4 col-12 col-md-6 col-lg-4 col-xl-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ "other_operations" | trans }}</h5>
          <a class="card-link" href="{{ path('project_archived_toggle', {id: project.id}) }}">
            {{ project.archived ? 'project_unarchive'|trans : 'project_archive'|trans}}
          </a>
          <a class="card-link" href="{{ path('project_export', {id: project.id}) }}">
            {{'export' | trans}}
          </a>
          <a class="card-link" href="#" data-toggle="modal" data-target="#deleteProjectConfirmModal">
            {{'project_delete' | trans}}
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="modal fade" id="deleteProjectConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteProjectConfirmModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteProjectConfirmModalLabel">{{'confirm_title'| trans}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h6>{{'confirm_project_deletion' | trans}}</h6>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-action="cancel" data-dismiss="modal">{{'cancel' | trans}}</button>
        <a href="{{ path("project_delete", {'id': project.id} )}}" type="button" class="btn btn-danger delete-project-confirm-button">{{'confirm' | trans}}</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}
