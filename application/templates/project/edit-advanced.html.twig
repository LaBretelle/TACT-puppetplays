{% extends "base.html.twig" %}

{% import _self as formMacros %}

{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" href="{{ asset('build/css/create-project.css') }}">
{% endblock %}

{% block body %}

{% if project.id %}
  {% include 'project/navigation.html.twig' with {'current': 'project_edit'} %}
{% else %}
  {% include 'header.html.twig' with {'title': 'project_create'} %}
{% endif %}

<div id="main-container">
  {{ form_start(form) }}
    {{ form_row(form.css) }}

    <div class="row mt-3 mb-4">
      <div class="col">
        {{ form_row(form.xslt_export) }}
        {% if project|hasXsl %}
        <div class="project-xsl-row">
            <a download href="{{ asset('project_files/'~ project.id ~ '/export.xsl') }}">export.xsl</a>
            <button data-project-id="{{ project.id }}" id="delete-xsl" type="button" role="button" class="btn btn-sm btn-danger">
              <i class="fas fa-trash"></i>
            </button>
        </div>
        {% endif %}
        <span class="text-muted small">Vous trouverez <a download href="{{ asset("xslt/xsl-exemple.xsl") }}">ici</a> un exemple de xsl</span>
      </div>
      <div class="col">
        {{ form_label(form.json_schema) }}
        {{ form_errors(form.json_schema) }}

        {{ form_widget(form.json_schema) }}
        <div class="text-right">
          <span class="text-muted small">{{"tei2json_help"|trans|raw}}</span>
        </div>

        {% if project|hasScheme %}
        <div class="project-json-row">
            <a download href="{{ asset('project_files/'~ project.id ~ '/tei-schema.json') }}">tei-schema.json</a>
            <button data-project-id="{{ project.id }}" id="delete-json" type="button" role="button" class="btn btn-sm btn-danger">
              <i class="fas fa-trash"></i>
            </button>
        </div>
        {% endif %}
      </div>

    </div>

    {{ form_widget(form._token) }}
    {{ form_row(form.save) }}
  </form>

  <div class="float-right">
    <form name="deleteProject" action="{{ path("project_delete", {'id': project.id} )}}" method="POST">
      <button class="btn btn-sm btn-danger" type="submit">
        <i class="fas fa-trash"></i> {{'project_delete' | trans}}
      </button>
    </form>
  </div>
</div>


{# delete project confirm modal #}
<div class="modal fade delete-project-confirm-modal" id="deleteProjectConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteProjectConfirmModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteProjectConfirmModalLabel">{{'confirm_title'| trans}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h6>{{'confirm_project_deletion' | trans}}</h6>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-action="cancel" data-dismiss="modal">{{'cancel' | trans}}</button>
        <button type="button" data-action="confirm" data-dismiss="modal" class="btn btn-danger delete-project-confirm-button">{{'confirm' | trans}}</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}


{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('build/js/edit-advanced-project.js') }}"></script>
{% endblock %}
